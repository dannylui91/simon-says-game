<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#616161">

    <Button
        android:id="@+id/game_btn_top_left"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <Button
        android:id="@+id/game_btn_top_right"
        android:layout_toRightOf="@id/game_btn_top_left"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <Button
        android:id="@+id/game_btn_bot_left"
        android:layout_below="@id/game_btn_top_left"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <Button
        android:id="@+id/game_btn_bot_right"
        android:layout_below="@id/game_btn_top_right"
        android:layout_toRightOf="@id/game_btn_bot_left"
        android:layout_width="150dp"
        android:layout_height="150dp" />

</RelativeLayout>